{
  "name": "@aindreyway/mcp-codex-keeper",
  "version": "1.1.10",
  "description": "An intelligent MCP server that serves as a guardian of development knowledge, providing AI assistants with curated access to latest documentation and best practices",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-codex-keeper": "build/index.js"
  },
  "scripts": {
    "prebuild": "npm run validate --silent",
    "build": "tsc --pretty false && cp -r src/config build/ && chmod +x build/index.js",
    "postbuild": "echo '\nâœ¨ Build completed successfully!'",
    "start": "cross-env NODE_ENV=production NODE_OPTIONS='--max-old-space-size=256' node build/index.js",
    "dev": "cross-env NODE_ENV=development NODE_OPTIONS='--max-old-space-size=256' tsc -w --pretty false",
    "serve": "cross-env NODE_ENV=development NODE_OPTIONS='--max-old-space-size=256' node build/index.js",
    "validate": "npm-run-all --silent type-check lint test:ci",
    "test": "cross-env NODE_ENV=test jest --verbose",
    "test:ci": "cross-env NODE_ENV=test jest --ci --silent",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "jest --watch",
    "test:report": "npm run test:coverage && open-cli test-report/index.html",
    "test:unit": "jest src/tests/unit --silent",
    "test:integration": "jest src/tests/integration --silent",
    "test:performance": "jest src/tests/performance --silent",
    "test:e2e": "jest src/tests/e2e --silent",
    "test:all": "npm-run-all --silent test:unit test:integration test:performance test:e2e",
    "test:watch:unit": "jest src/tests/unit --watch",
    "test:watch:integration": "jest src/tests/integration --watch",
    "test:watch:performance": "jest src/tests/performance --watch",
    "test:watch:e2e": "jest src/tests/e2e --watch",
    "test:coverage:unit": "jest src/tests/unit --coverage",
    "test:coverage:integration": "jest src/tests/integration --coverage",
    "test:coverage:performance": "jest src/tests/performance --coverage",
    "test:coverage:e2e": "jest src/tests/e2e --coverage",
    "test:coverage:all": "jest --coverage",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit --pretty false",
    "update-version": "node scripts/update-version.js",
    "version": "npm run update-version && git add -A",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run validate",
    "precommit": "npm run validate",
    "prepare": "husky install",
    "clean": "rimraf build test-report coverage junit.xml",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json",
    "clean:test": "rimraf test-data test-report coverage junit.xml",
    "deploy": "npm run validate && npm run build && git add . && git commit -m \"chore: prepare for release\" && npm version patch && npm publish --access public && git push --tags && git push"
  },
  "keywords": [
    "mcp",
    "documentation",
    "cline",
    "sonnet",
    "assistant",
    "development",
    "best-practices",
    "aindreyway",
    "typescript"
  ],
  "author": "aindreyway",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "@types/jsdom": "21.1.7",
    "@types/node": "^20.10.4",
    "@types/turndown": "5.0.5",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "ajv-formats-draft2019": "1.6.1",
    "axios": "^1.6.2",
    "cross-env": "^7.0.3",
    "jsdom": "25.0.1",
    "node-fetch": "^3.3.2",
    "turndown": "7.2.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/plugin-transform-modules-commonjs": "7.26.3",
    "@babel/preset-env": "7.26.0",
    "@types/jest": "29.5.14",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "babel-jest": "29.7.0",
    "eslint": "9.17.0",
    "eslint-plugin-jest": "28.10.0",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "jest-html-reporter": "3.10.2",
    "jest-junit": "16.0.0",
    "jest-mock-extended": "4.0.0-beta1",
    "jest-summary-reporter": "0.0.2",
    "jest-watch-typeahead": "2.2.2",
    "npm-run-all": "^4.1.5",
    "open-cli": "8.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "29.2.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aindreyway/mcp-codex-keeper.git"
  },
  "bugs": {
    "url": "https://github.com/aindreyway/mcp-codex-keeper/issues"
  },
  "homepage": "https://github.com/aindreyway/mcp-codex-keeper#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
